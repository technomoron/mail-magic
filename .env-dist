# Specifies the environment in which the app is running Possible values: development, production, staging
NODE_ENV=development

# Defines the port on which the app listens. Default 3776 [number]
API_PORT=3776

# Sets the local IP address for the API to listen at
API_HOST=0.0.0.0

# Reload init-data.json automatically on change [boolean]
DB_AUTO_RELOAD=false

# Drop and recreate database tables on startup (DANGEROUS) [boolean]
DB_FORCE_SYNC=false

# Alter existing tables on startup to match models (requires write access to the DB) [boolean]
DB_SYNC_ALTER=true

# Sets the public URL for the API (i.e. https://ml.example.com:3790)
API_URL=http://localhost:3776

# Base path prefix for API routes
API_BASE_PATH=/api

# Public base URL for asset hosting (origin or origin + path)
ASSET_PUBLIC_BASE=

# Enable the Swagger/OpenAPI endpoint [boolean]
SWAGGER_ENABLED=false

# Path to expose the Swagger/OpenAPI spec (default: /api/swagger when enabled)
SWAGGER_PATH=

# Enable the optional admin UI and admin API module when available [boolean]
ADMIN_ENABLED=false

# Optional path to the admin UI dist directory (or its parent)
ADMIN_APP_PATH=

# Route prefix exposed for config assets
ASSET_ROUTE=/asset

# Path to directory where config files are located
CONFIG_PATH=./data/

# Database username for API database
DB_USER=

# Password for API database
DB_PASS=

# Name of API database. Filename for sqlite3, database name for others
DB_NAME=maildata

# Host of API database
DB_HOST=localhost

# Database type for the API database Possible values: sqlite
DB_TYPE=sqlite

# Log SQL statements [boolean]
DB_LOG=false

# Enable debug output, including nodemailer and API [boolean]
DEBUG=false

# Enable Nunjucks HTML autoescape when rendering templates [boolean]
AUTOESCAPE_HTML=true

# Hostname of SMTP sending host
SMTP_HOST=localhost

# SMTP host server port [number]
SMTP_PORT=587

# Use secure connection to SMTP host (SSL/TSL) [boolean]
SMTP_SECURE=false

# Reject bad cert/TLS connection to SMTP host [boolean]
SMTP_TLS_REJECT=false

# Username for SMTP host
SMTP_USER=

# Password for SMTP host
SMTP_PASSWORD=

# Path for attached files. Use {domain} to scope per domain.
UPLOAD_PATH=./{domain}/uploads

# Maximum upload size per file (bytes) when uploads are enabled [number]
UPLOAD_MAX=31457280

# Rate limit window for unauthenticated form submissions (seconds) [number]
FORM_RATE_LIMIT_WINDOW_SEC=0

# Max unauthenticated form submissions per client IP per window (0 disables rate limiting) [number]
FORM_RATE_LIMIT_MAX=0

# Max number of uploaded files accepted by /v1/form/message (-1 unlimited, 0 disables attachments) [number]
FORM_MAX_ATTACHMENTS=-1

# Keep uploaded form files on disk after processing (success or failure) [boolean]
FORM_KEEP_UPLOADS=true

# CAPTCHA provider used to verify tokens for /v1/form/message Possible values: turnstile, hcaptcha, recaptcha
FORM_CAPTCHA_PROVIDER=turnstile

# CAPTCHA secret used by the server to verify tokens (enables captcha checks when set)
FORM_CAPTCHA_SECRET=

# Require a CAPTCHA token for /v1/form/message when captcha is enabled [boolean]
FORM_CAPTCHA_REQUIRED=false

# Server-side pepper used to HMAC API tokens before DB lookup. Keep it stable to preserve existing API keys. (required)
API_TOKEN_PEPPER=
