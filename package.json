{
	"name": "mail-magic-workspace",
	"private": true,
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"build": "node ./bin/pmwrap -ws --if-present run build",
		"client": "node ./bin/pmwrap -w packages/mail-magic-client run build",
		"server": "node ./bin/pmwrap -w packages/mail-magic run build",
		"admin": "node ./bin/pmwrap -w packages/mail-magic-admin run build",
		"test:client": "node ./bin/pmwrap -w packages/mail-magic-client test",
		"test:server": "node ./bin/pmwrap -w packages/mail-magic test",
		"test:function": "vitest run",
		"test": "node ./bin/pmwrap run test:server && node ./bin/pmwrap run test:client && node ./bin/pmwrap run test:function",
		"lint": "eslint --no-error-on-unmatched-pattern --ext .js,.cjs,.mjs,.ts,.mts,.tsx,.vue,.json ./ && stylelint --allow-empty-input \"**/*.{css,scss}\"",
		"format": "npm run lintfix && npm run pretty",
		"release": "bash .do-release.sh",
		"lintfix": "eslint --fix --no-error-on-unmatched-pattern --ext .js,.cjs,.mjs,.ts,.mts,.tsx,.vue,.json ./ && stylelint --allow-empty-input --fix \"**/*.{css,scss}\"",
		"pretty": "prettier --write \"**/*.{js,jsx,cjs,mjs,ts,tsx,mts,vue,json,css,scss,md}\"",
		"cleanbuild": "rm -rf ./dist/ && npm run format && npm run build",
		"lintconfig": "node lintconfig.cjs"
	},
	"devDependencies": {
		"@types/node": "^20.19.11",
		"@types/supertest": "^6.0.3",
		"@typescript-eslint/eslint-plugin": "^8.54.0",
		"@typescript-eslint/parser": "^8.54.0",
		"@vue/eslint-config-typescript": "^14.6.0",
		"eslint": "^9.39.2",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-import": "^2.32.0",
		"eslint-plugin-vue": "^10.7.0",
		"jsonc-eslint-parser": "^2.4.2",
		"mailparser": "^3.9.1",
		"prettier": "^3.8.1",
		"smtp-server": "^3.18.0",
		"stylelint": "^17.1.0",
		"stylelint-config-standard-scss": "^17.0.0",
		"supertest": "^7.1.4",
		"typescript": "^5.9.3",
		"vitest": "^4.0.16",
		"vue-eslint-parser": "^10.2.0"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"core-js",
			"@scarf/scarf",
			"esbuild",
			"sqlite3"
		]
	}
}
