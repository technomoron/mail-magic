{
	"name": "mail-magic-workspace",
	"private": true,
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"build": "node ./bin/pmwrap -ws --if-present run build",
		"client": "node ./bin/pmwrap -w packages/mail-magic-client run build",
		"server": "node ./bin/pmwrap -w packages/mail-magic run build",
		"admin": "node ./bin/pmwrap -w packages/mail-magic-admin run build",
		"test:client": "node ./bin/pmwrap -w packages/mail-magic-client test",
		"test:server": "node ./bin/pmwrap -w packages/mail-magic test",
		"test:function": "vitest run",
		"test": "node ./bin/pmwrap run test:server && node ./bin/pmwrap run test:client && node ./bin/pmwrap run test:function",
		"lint": "node ./bin/pmwrap -ws --if-present run lint",
		"format": "node ./bin/pmwrap -ws --if-present run format",
		"release": "bash .do-release.sh"
	},
	"devDependencies": {
		"@types/node": "^20.19.11",
		"@types/supertest": "^6.0.3",
		"mailparser": "^3.9.1",
		"smtp-server": "^3.18.0",
		"supertest": "^7.1.4",
		"vitest": "^4.0.16"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"core-js",
			"@scarf/scarf",
			"esbuild",
			"sqlite3"
		]
	}
}
