{
	"name": "mail-magic",
	"version": "1.0.2",
	"main": "server.js",
	"type": "module",
	"scripts": {
		"start": "node dist/index.js",
		"dev": "NODE_ENV=development nodemon --watch 'src/**/*.ts' --watch 'config/**/*.*' --watch '.env' --exec 'tsx' src/index.ts",
		"run": "NODE_ENV=production npm run start",
		"build": "tsc",
		"scrub": "rm -rf ./node_modules/ ./dist/ pnpm-lock.yaml",
		"lint": "eslint --ext .js,.ts,.vue ./",
		"lintfix": "eslint --fix --ext .js,.ts,.vue ./src/",
		"pretty": "prettier --write \"**/*.{js,jsx,ts,tsx,vue,njk,json,css,scss,md}\"",
		"format": "npm run lintfix && npm run pretty",
		"cleanbuild": "rm -rf ./dist/ && npm run lintfix && npm run format && npm run build"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"description": "",
	"dependencies": {
		"@technomoron/api-server-base": "^1.0.38",
		"@technomoron/env-loader": "^1.0.8",
		"bcryptjs": "^3.0.2",
		"email-addresses": "^5.0.0",
		"html-to-text": "^9.0.5",
		"nodemailer": "^6.10.1",
		"nunjucks": "^3.2.4",
		"sequelize": "^6.37.7",
		"sqlite3": "^5.1.7",
		"swagger-jsdoc": "^6.2.8",
		"swagger-ui-express": "^5.0.1",
		"zod": "^4.1.5"
	},
	"devDependencies": {
		"@types/html-to-text": "^9.0.4",
		"@types/nodemailer": "^6.4.19",
		"@types/nunjucks": "^3.2.6",
		"@typescript-eslint/eslint-plugin": "8.32.1",
		"@typescript-eslint/parser": "8.32.1",
		"@vue/eslint-config-prettier": "10.2.0",
		"@vue/eslint-config-typescript": "14.5.0",
		"eslint": "9.27.0",
		"eslint-config-prettier": "10.1.5",
		"eslint-import-resolver-alias": "1.1.2",
		"eslint-plugin-import": "2.31.0",
		"eslint-plugin-nuxt": "4.0.0",
		"eslint-plugin-prettier": "5.5.1",
		"eslint-plugin-vue": "10.0.0",
		"nodemon": "^3.1.10",
		"prettier": "3.5.3",
		"prettier-plugin-twig-melody": "^0.4.6",
		"ts-node": "^10.9.2",
		"tsx": "^4.20.5",
		"typescript": "^5.9.2",
		"vue-eslint-parser": "10.1.3"
	}
}
