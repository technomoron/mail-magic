{
	"name": "mail-magic-workspace",
	"private": true,
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"sync:shared": "node ./scripts/sync-shared-code.cjs",
		"build": "run-s build:server build:client build:cli build:admin",
		"client": "run-s build:client",
		"cli": "run-s build:cli",
		"server": "run-s build:server",
		"admin": "run-s build:admin",
		"build:client": "npm run --workspace packages/client build",
		"build:cli": "npm run --workspace packages/cli build",
		"build:server": "npm run --workspace packages/server build",
		"build:admin": "npm run --workspace packages/mail-magic-admin build",
		"examples": "run-s start:examples",
		"start:examples": "npm run --workspace packages/examples start",
		"test:client": "run-s test:client:pkg",
		"test:client:pkg": "npm run --workspace packages/client test",
		"test:cli": "run-s test:cli:pkg",
		"test:cli:pkg": "npm run --workspace packages/cli test",
		"test:server": "run-s test:server:pkg",
		"test:server:pkg": "npm run --workspace packages/server test",
		"test:function": "vitest run",
		"test": "run-s test:server test:client test:cli test:function",
		"lint:eslint": "eslint --no-error-on-unmatched-pattern --ext .js,.cjs,.mjs,.ts,.mts,.tsx,.vue,.json ./",
		"lint:stylelint": "stylelint --allow-empty-input \"**/*.{css,scss}\"",
		"lint": "run-s lint:eslint lint:stylelint",
		"format": "run-s lintfix pretty",
		"release": "bash .do-release.sh",
		"lintfix:eslint": "eslint --fix --no-error-on-unmatched-pattern --ext .js,.cjs,.mjs,.ts,.mts,.tsx,.vue,.json ./",
		"lintfix:stylelint": "stylelint --allow-empty-input --fix \"**/*.{css,scss}\"",
		"lintfix": "run-s lintfix:eslint lintfix:stylelint",
		"pretty": "prettier --write \"**/*.{js,jsx,cjs,mjs,ts,tsx,mts,vue,json,css,scss,md}\"",
		"clean:dist": "rm -rf ./dist/",
		"cleanbuild": "run-s clean:dist format build",
		"lintconfig": "node lintconfig.cjs"
	},
	"devDependencies": {
		"@types/node": "^20.19.11",
		"@types/supertest": "^6.0.3",
		"@typescript-eslint/eslint-plugin": "^8.54.0",
		"@typescript-eslint/parser": "^8.54.0",
		"@vue/eslint-config-typescript": "^14.6.0",
		"eslint": "^9.39.2",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-import": "^2.32.0",
		"eslint-plugin-vue": "^10.7.0",
		"jsonc-eslint-parser": "^2.4.2",
		"mailparser": "^3.9.1",
		"npm-run-all": "^4.1.5",
		"prettier": "^3.8.1",
		"smtp-server": "^3.18.0",
		"stylelint": "^17.1.0",
		"stylelint-config-standard-scss": "^17.0.0",
		"supertest": "^7.1.4",
		"typescript": "^5.9.3",
		"vitest": "^4.0.16",
		"vue-eslint-parser": "^10.2.0"
	}
}
